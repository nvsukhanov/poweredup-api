{
  "name": "rxpoweredup",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "lib/rxpoweredup/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/lib/rxpoweredup",
        "main": "lib/rxpoweredup/src/index.ts",
        "tsConfig": "lib/rxpoweredup/tsconfig.lib.json",
        "assets": ["*.md"],
        "clean": true
      }
    },
    "build-d-ts": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/lib/rxpoweredup",
        "main": "lib/rxpoweredup/src/index.ts",
        "tsConfig": "lib/rxpoweredup/tsconfig.d.json",
        "clean": false
      },
      "dependsOn": [ "^build-d-ts", "build" ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "docs": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "lib/rxpoweredup",
        "commands": [
          "typedoc"
        ],
        "parallel": false
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "dist/lib/rxpoweredup",
        "commands": [
          "npm publish --dry-run"
        ],
        "parallel": false
      },
      "dependsOn": [ "^publish", "lint", "test", "build-d-ts" ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "lib/rxpoweredup/jest.config.ts"
      }
    }
  },
  "tags": []
}
